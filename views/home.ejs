<%- include('header.ejs') %>
    <main>
        <h1>Rio Abaixo/Rio Acima</h1>
        <div>
            <form class="pure-form pure-form-aligned">
                <fieldset>
                    <div class="pure-control-group">
                        <label for="txtAddJogador">Nome do Jogador: </label>
                        <input type="text" id="txtAddJogador" class="pure-u-1-4" />
                    </div>
                </fieldset>
            </form>

            <button class="pure-button pure-button-primary" id="btnAddJogador" onclick="addJogador()">Adicionar
                Jogador</button>
            <table class="pure-table" style="margin: 1vh auto;">
                <thead>
                    <tr>
                        <th>Selecione</th>
                        <th>Mesa</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <ul>
                            <td id="listaNomes">
                            </td>
                        </ul>

                        <ul>
                            <td id="listaJogadores">
                            </td>
                        </ul>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>

    <script type="text/javascript" src="./js/configuracaoJogadores.js"></script>

