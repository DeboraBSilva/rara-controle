<%- include('header.ejs') %>
    <main>
        <h1>Rio Abaixo/Rio Acima</h1>
        <div>
            <form action='/home' method='post' class="pure-form pure-form-aligned">
                <fieldset>
                    <div class="pure-control-group">
                        <label for="txtAddJogador">Nome do Jogador: </label>
                        <input name="jogador" type="text" id="txtAddJogador" class="pure-u-sm-1-4" required />
                    </div>
                </fieldset>
                <button type="submit" class="pure-button pure-button-primary" id="btnAddJogador">Adicionar
                    Jogador</button>
            </form>
            <button class="pure-button pure-button-primary" id="btnIniciarJogo" style="margin: 5vh auto;">Iniciar Jogo</button>
            <div style="display: flex; ">
                <table class="pure-table" style="margin: 1vh auto;">
                    <thead>
                        <tr>
                            <th>Selecione</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% nomes.forEach(usuario=> { %>
                            <tr>
                                <td class="tdNome">
                                    <%= usuario.nome %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <table class="pure-table" style="margin: 5vh auto;">
                    <thead>
                        <tr>
                            <th>Mesa</th>
                        </tr>
                    </thead>
                    <tbody id="jogadores">

                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <script type="text/javascript" src="./js/configuracaoJogadores.js"></script>

    <%- include('footer.ejs') %>